<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/payment_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_placeholder"  />  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginStart="16dp">

    <TextView
        android:id="@+id/payment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Title"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/payment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Description"
        android:textSize="14sp"
        android:textColor="@color/grey" />

</LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false">  <RadioButton
        android:id="@+id/payment_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false" />  </RadioGroup>

</LinearLayout>