<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <RelativeLayout
        android:id="@+id/wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_img"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/second_logo" />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/backButtonImage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:contentDescription="backButton"
                android:scaleType="fitCenter"
                android:src="@drawable/back_btn" />

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="380dp"
            android:layout_height="550dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:alpha="0.2"
            android:background="@drawable/bg_square" />

        <RelativeLayout
            android:id="@+id/relative_layout2"
            android:layout_width="380dp"
            android:layout_height="550dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sofia_black"
                android:text="Brew,\nSign Up Now"
                android:textColor="@color/black"
                android:textSize="36dp" />

            <EditText
                android:id="@+id/fullnameEt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_white"
                android:hint="Full Name"
                android:padding="10dp"
                android:paddingEnd="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/emailEt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/fullnameEt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_white"
                android:hint="Email"
                android:padding="10dp"
                android:paddingEnd="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/passwordEt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/emailEt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_white"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:paddingEnd="10dp"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/btnShowPasswordSignUp1"
                android:layout_width="50sp"
                android:layout_height="48sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24sp"
                android:layout_marginTop="290sp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_show_password"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/repeatpass"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/passwordEt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_white"
                android:hint="Repeat Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:paddingEnd="10dp"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/btnShowPasswordSignup2"
                android:layout_width="50sp"
                android:layout_height="48sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24sp"
                android:layout_marginTop="370sp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_show_password"
                android:visibility="visible"/>

            <Button
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/darkbrown"
                android:text="Login"
                app:cornerRadius="8dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="130sp"
            android:layout_marginBottom="30sp"
            android:fontFamily="@font/sofia_semibold"
            android:text="DON'T HAVE AN ACCOUNT?"
            android:textColor="@color/darkbrown"
            android:textSize="10sp" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="120sp"
            android:layout_marginBottom="18sp"
            android:background="@color/transparent"
            android:fontFamily="@font/sofia_black"
            android:text="Login"
            android:textColor="@color/darkbrown"
            android:textSize="14sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>