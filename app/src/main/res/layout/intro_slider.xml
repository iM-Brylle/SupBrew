<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/introSlider"
    tools:context=".IntroSlider"
    android:background="@drawable/background_img">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-16dp">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/second_logo" />


        <ImageView
            android:id="@+id/mochanish"
            android:layout_width="370dp"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/round_corner"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mochanish_img" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mochanish"
            android:layout_alignLeft="@+id/mochanish"
            android:layout_alignRight="@id/mochanish"
            android:layout_marginTop="35dp"
            android:text="Coffee and kindness brewed daily"
            android:textColor="@color/darkbrown"
            android:textSize="36sp"
            android:fontFamily="@font/sofia_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_1"
            android:layout_alignLeft="@+id/mochanish"
            android:layout_alignRight="@id/mochanish"
            android:layout_marginTop="15dp"
            android:text="A cup of coffee shared with a friend is happiness tested and time well spent."
            android:textColor="@color/darkbrown"
            android:textSize="20sp"
            android:fontFamily="@font/sofia_semibold"/>

        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/mochanish"
            android:layout_alignRight="@id/mochanish"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/bg_brownbutton"
            android:padding="16dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/skip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="skip"
            android:layout_marginTop="50dp"
            android:layout_marginStart="16dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>